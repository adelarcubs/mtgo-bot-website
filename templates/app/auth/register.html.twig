{% extends "@layout/default.html.twig" %}

{% block title %}{{ translate('t.register') }}{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">{{ translate('t.create.account') }}</h4>
                </div>
                <div class="card-body">
                    {% if error is defined %}
                        <div class="alert alert-danger">{{ error|e }}</div>
                    {% endif %}

                    <form method="post" action="{{ path('auth.register') }}">
                        <div class="mb-3">
                            <label for="email" class="form-label">{{ translate('t.email') }}</label>
                            <input 
                                type="email" 
                                class="form-control {% if errors.email is defined %}is-invalid{% endif %}" 
                                id="email" 
                                name="email" 
                                value="{{ formData.email ?? '' }}"
                                required
                            >
                            {% if errors.email is defined %}
                                <div class="invalid-feedback">{{ errors.email|e }}</div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            <label for="name" class="form-label">{{ translate('t.name') }}</label>
                            <input 
                                type="text" 
                                class="form-control {% if errors.name is defined %}is-invalid{% endif %}" 
                                id="name" 
                                name="name" 
                                value="{{ formData.name ?? '' }}"
                                required
                            >
                            {% if errors.name is defined %}
                                <div class="invalid-feedback">{{ errors.name|e }}</div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">{{ translate('t.password') }}</label>
                            <input 
                                type="password" 
                                class="form-control {% if errors.password is defined %}is-invalid{% endif %}" 
                                id="password" 
                                name="password" 
                                required
                            >
                            {% if errors.password is defined %}
                                <div class="invalid-feedback">{{ errors.password|e }}</div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            <label for="confirm_password" class="form-label">{{ translate('t.confirm.password') }}</label>
                            <input 
                                type="password" 
                                class="form-control {% if errors.confirm_password is defined %}is-invalid{% endif %}" 
                                id="confirm_password" 
                                name="confirm_password" 
                                required
                            >
                            {% if errors.confirm_password is defined %}
                                <div class="invalid-feedback">{{ errors.confirm_password|e }}</div>
                            {% endif %}
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">{{ translate('t.register') }}</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    {{ translate('t.already.have.account') }} <a href="{{ path('auth.login') }}">{{ translate('t.login') }}</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
