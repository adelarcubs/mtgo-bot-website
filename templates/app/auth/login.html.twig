{% extends "@layout/default.html.twig" %}

{% block title %}{{ translate('t.login') }}{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="text-center">{{ translate('t.login') }}</h3>
                </div>
                <div class="card-body">
                    {% if error %}
                        <div class="alert alert-danger">{{ error }}</div>
                    {% endif %}
                    
                    <form method="post" action="{{ path('auth.login') }}">
                        <div class="mb-3">
                            <label for="email" class="form-label">{{ translate('t.email') }}</label>
                            <input type="email" 
                                   class="form-control" 
                                   id="email" 
                                   name="email" 
                                   value="{{ email }}" 
                                   required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">{{ translate('t.password') }}</label>
                            <input type="password" 
                                   class="form-control" 
                                   id="password" 
                                   name="password" 
                                   required>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">{{ translate('t.login') }}</button>
                        </div>
                    </form>
                    
                    <div class="mt-3 text-center">
                        <a href="#" class="text-muted">{{ translate('t.forgot.password') }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
