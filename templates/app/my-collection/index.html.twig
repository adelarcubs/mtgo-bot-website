{% extends "@layout/default.html.twig" %}

{% block title %}My Collection{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2>My Collection</h2>
                    <form method="post" action="{{ path('my-collection.upload') }}" enctype="multipart/form-data" class="d-inline">
                        <label for="dekFile" class="btn btn-primary mb-0" style="cursor: pointer;">
                            <i class="fas fa-upload me-2"></i>Upload Collection
                            <input type="file" id="dekFile" name="dek_file" accept=".dek" required style="display: none;" onchange="this.form.submit()">
                        </label>
                    </form>
                </div>
                <div class="card-body">
                    {% if collectionItems|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>MTGO Item ID</th>
                                        <th>Quantity</th>
                                        <th>Added At</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in collectionItems %}
                                        <tr>
                                            <td>{{ item.mtgoItemId }}</td>
                                            <td>{{ item.quantity }}</td>
                                            <td>{{ item.createdAt|date('Y-m-d H:i') }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p>No collection items found. Upload your first .dek file above.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
