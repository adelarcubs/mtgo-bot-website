{% extends '@layout/default.html.twig' %}

{% block title %}{{ translate('t.our.bots') }}{% endblock %}

{% block content %}
    <div class="container mt-5 pt-4">
        <h1>Our MTGO Bots</h1>
        <p class="lead">Check the status of our trading bots below.</p>
        
        <div class="table-responsive mt-4">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Last Update</th>
                    </tr>
                </thead>
                <tbody>
                    {% for bot in bots %}
                        <tr>
                            <td><strong>{{ bot.name }}</strong></td>
                            <td>{{ bot.description|default('No description available') }}</td>
                            <td>
                                {% if bot.lastStatus %}
                                    <span class="badge {% if 'online' in bot.lastStatus|lower %}bg-success{% else %}bg-warning{% endif %}">
                                        {{ bot.lastStatus }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary">Unknown</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if bot.lastStatusTimestamp %}
                                    {{ bot.lastStatusTimestamp|date('Y-m-d H:i:s') }}
                                {% else %}
                                    Never
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">No active bots found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
